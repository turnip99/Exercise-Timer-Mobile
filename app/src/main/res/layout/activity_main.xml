<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colourGrey"
        android:id="@+id/constraintLayout">

    <android.support.constraint.Guideline
            android:id="@+id/guidelineManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>
    <Button
            android:text="Manage Exercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnManage"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineManage"
            android:background="@drawable/button_blue_border"
            android:textSize="38sp" android:textStyle="bold"
            android:paddingBottom="2dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="2dp"
            android:onClick="ManageClick"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineExercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.21"/>
    <Button
            android:text="Generate Exercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGenerate"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineExercises"
            android:background="@drawable/button_green_border"
            android:textSize="38sp" android:textStyle="bold"
            android:paddingBottom="2dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="2dp"
            android:onClick="GenerateClick"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.37"/>
    <Button
            android:text="Run Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTimer"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineTimer"
            android:background="@drawable/button_orange_border"
            android:textSize="38sp" android:textStyle="bold"
            android:paddingBottom="2dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="2dp"
            android:onClick="TimerClick"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.53"/>
    <Button
            android:text="My Records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecords"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineRecords"
            android:background="@drawable/button_red_border"
            android:textSize="38sp" android:textStyle="bold"
            android:paddingBottom="2dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="2dp"
            android:onClick="RecordsClick"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.69"/>
    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineSettings"
            android:background="@drawable/button_pink_border"
            android:textSize="38sp" android:textStyle="bold"
            android:paddingBottom="2dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="2dp"
            android:onClick="SettingsClick"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>
    <Button
            android:text="User Guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuide"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineGuide"
            android:background="@drawable/button_purple_border"
            android:textSize="38sp" android:textStyle="bold"
            android:paddingBottom="2dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="2dp"
            android:onClick="GuideClick"/>

</android.support.constraint.ConstraintLayout>