<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        tools:context=".SettingsActivity">

    <android.support.constraint.Guideline
            android:id="@+id/guidelineMainLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineMainRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

    <android.support.constraint.Guideline
        android:id="@+id/guidelineTitleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTitle"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTitleTop"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTitleBottom"
            android:text="Settings" android:textSize="36sp" android:textStyle="bold" android:gravity="center"
            android:textColor="@color/colourBlack"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTitleBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineColourTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblColour"
            app:layout_constraintTop_toBottomOf="@+id/guidelineColourTop"
            app:layout_constraintRight_toLeftOf="@+id/spnColour"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineColourBottom"
            android:text="Colour: " android:textSize="20sp"/>
    <Spinner
            android:id="@+id/spnColour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/colour_array"
            app:layout_constraintTop_toBottomOf="@+id/guidelineColourTop"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/lblColour"
            app:layout_constraintBottom_toTopOf="@+id/guidelineColourBottom"
            android:textSize="24sp"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineColourBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.23"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblReminder"
            app:layout_constraintTop_toBottomOf="@+id/guidelineColourBottom"
            app:layout_constraintRight_toLeftOf="@+id/spnReminder"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineReminderBottom"
            android:text="Reminder: " android:textSize="20sp"/>
    <Spinner
            android:id="@+id/spnReminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/reminder_array"
            app:layout_constraintTop_toBottomOf="@+id/guidelineColourBottom"
            app:layout_constraintRight_toLeftOf="@+id/btnReminder"
            app:layout_constraintLeft_toRightOf="@+id/lblReminder"
            app:layout_constraintBottom_toTopOf="@+id/guidelineReminderBottom"
            android:textSize="24sp"/>
    <ImageButton
            android:id="@+id/btnReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/guidelineColourBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/spnReminder"
            app:layout_constraintBottom_toTopOf="@+id/guidelineReminderBottom"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/sound_image" android:onClick="SoundClick"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineReminderBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.31"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblFocus"
            app:layout_constraintTop_toBottomOf="@+id/guidelineReminderBottom"
            app:layout_constraintRight_toLeftOf="@+id/spnFocus"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineFocusBottom"
            android:text="Focus: " android:textSize="20sp"/>
    <Spinner
            android:id="@+id/spnFocus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/all_focus_array"
            app:layout_constraintTop_toBottomOf="@+id/guidelineReminderBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/lblFocus"
            app:layout_constraintBottom_toTopOf="@+id/guidelineFocusBottom"
            android:textSize="24sp" android:clickable="false"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineFocusBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.39"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblReset"
            app:layout_constraintTop_toBottomOf="@+id/guidelineFocusBottom"
            app:layout_constraintRight_toLeftOf="@+id/spnReset"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineResetBottom"
            android:text="Records Reset: " android:textSize="20sp"/>
    <Spinner
            android:id="@+id/spnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/days_array"
            app:layout_constraintTop_toBottomOf="@+id/guidelineFocusBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/lblReset"
            app:layout_constraintBottom_toTopOf="@+id/guidelineResetBottom"
            android:textSize="24sp" android:clickable="false"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineResetBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineEquipmentLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineEquipmentRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEquipment"
            app:layout_constraintTop_toBottomOf="@+id/guidelineResetBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineEquipmentRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineEquipmentBottom"
            android:text="Equipment Available: " android:textSize="22sp" android:textStyle="bold"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineEquipmentBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBall"
            app:layout_constraintTop_toBottomOf="@+id/guidelineEquipmentBottom"
            app:layout_constraintRight_toLeftOf="@+id/chkBall"
            app:layout_constraintLeft_toRightOf="@+id/guidelineEquipmentLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBallBottom"
            android:text="Ball: " android:textSize="20sp"/>
    <CheckBox
            android:id="@+id/chkBall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/guidelineEquipmentBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineEquipmentRight"
            app:layout_constraintLeft_toRightOf="@+id/lblBall"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBallBottom"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineBallBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.61"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBand"
            app:layout_constraintTop_toBottomOf="@+id/guidelineBallBottom"
            app:layout_constraintRight_toLeftOf="@+id/chkBand"
            app:layout_constraintLeft_toRightOf="@+id/guidelineEquipmentLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBandBottom"
            android:text="Band: " android:textSize="20sp"/>
    <CheckBox
            android:id="@+id/chkBand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/guidelineBallBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineEquipmentRight"
            app:layout_constraintLeft_toRightOf="@+id/lblBand"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBandBottom"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineBandBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblBox"
            app:layout_constraintTop_toBottomOf="@+id/guidelineBandBottom"
            app:layout_constraintRight_toLeftOf="@+id/chkBox"
            app:layout_constraintLeft_toRightOf="@+id/guidelineEquipmentLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBoxBottom"
            android:text="Box: " android:textSize="20sp"/>
    <CheckBox
            android:id="@+id/chkBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/guidelineBandBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineEquipmentRight"
            app:layout_constraintLeft_toRightOf="@+id/lblBox"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBoxBottom"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineBoxBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblWeights"
            app:layout_constraintTop_toBottomOf="@+id/guidelineBoxBottom"
            app:layout_constraintRight_toLeftOf="@+id/chkWeights"
            app:layout_constraintLeft_toRightOf="@+id/guidelineEquipmentLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineWeightsBottom"
            android:text="Weights: " android:textSize="20sp"/>
    <CheckBox
            android:id="@+id/chkWeights"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/guidelineBoxBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineEquipmentRight"
            app:layout_constraintLeft_toRightOf="@+id/lblWeights"
            app:layout_constraintBottom_toTopOf="@+id/guidelineWeightsBottom"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineWeightsBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.82"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineButtonTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/btnSave"
            android:textAllCaps="false"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintTop_toBottomOf="@+id/guidelineButtonTop"
            app:layout_constraintBottom_toTopOf="@+id/guidelineButtonBottom"
            android:background="@drawable/button_orange_border"
            android:textSize="34sp" android:textStyle="bold"
            android:paddingBottom="1dp" android:paddingLeft="12dp"
            android:paddingRight="12dp" android:paddingTop="1dp"
            android:onClick="SaveClick"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineButtonBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96"/>

</android.support.constraint.ConstraintLayout>