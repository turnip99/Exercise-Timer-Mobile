<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecordsActivity"
        android:id="@+id/constraintLayout">

    <android.support.constraint.Guideline
            android:id="@+id/guidelineMainLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineMainRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineCentreLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.48"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineCentreRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52"/>

    <android.support.constraint.Guideline
            android:id="@+id/guidelineTitleTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTitle"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTitleTop"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTitleBottom"
            android:text="My Records" android:textSize="32sp" android:textStyle="bold" android:gravity="center"
            android:textColor="@color/colourBlack"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTitleBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>


    <android.support.constraint.Guideline
            android:id="@+id/guidelineTop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.41"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTop4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTop5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineTop6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline
            android:id="@+id/guidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblExerciseDayToday"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop1"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintRight_toLeftOf="@+id/guidelineCentreLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop2"

            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkGreen"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblExerciseDayYesterday"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop1"
            app:layout_constraintLeft_toRightOf="@+id/guidelineCentreRight"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop2"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkGreen"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblExerciseDayBest"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop2"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop3"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkBlue"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblExerciseWeekThis"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop3"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintRight_toLeftOf="@+id/guidelineCentreLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop4"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkGreen"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblExerciseWeekLast"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop3"
            app:layout_constraintLeft_toRightOf="@+id/guidelineCentreRight"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop4"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkGreen"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblExerciseWeekBest"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop4"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop5"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkBlue"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDelayToday"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop5"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            app:layout_constraintRight_toLeftOf="@+id/guidelineCentreLeft"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop6"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkOrange"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDelayYesterday"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop5"
            app:layout_constraintLeft_toRightOf="@+id/guidelineCentreRight"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintBottom_toTopOf="@+id/guidelineTop6"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourDarkOrange"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDelayBest"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop6"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineMainRight"
            app:layout_constraintLeft_toRightOf="@+id/guidelineMainLeft"
            android:text="" android:textSize="20sp" android:gravity="right"
            android:textColor="@color/colourRed"/>

</android.support.constraint.ConstraintLayout>